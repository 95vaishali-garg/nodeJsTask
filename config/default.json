{
    "db": {
        "url": "mongodb://127.0.0.1:27017/nodejsTask",
        "database": "nodejsTask"
    },

    "app": {
        "url": "http://localhost",
        "port": 6500
    },
    "webServer": {
        "url": "http://localhost",
        "port": 6500
    },
    "auth": {
        "jwtKey": "supersecret"
    },
    "providers": {
        
        "file-store": {
            "dir": "public/files/images",
            "root": "http://localhost:6600/files"
        }
    },
    "logger": {
        "file": {
            "filename": "logs/logs.json",
            "level": "silly",
            "handleExceptions": true,
            "json": true,
            "maxsize": 512000,
            "maxFiles": 5,
            "colorize": false
        },
        "console": {
            "level": "debug",
            "handleExceptions": true,
            "json": false,
            "colorize": true
        },
        "http": {}
    }
}
